<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gingbear.githubtest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9" />

    <!-- Wifi の ON/OFF の検知と変更 -->
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
	
    <!-- ネットワーク接続状態の検知 -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<!-- インターネット利用 -->
	<uses-permission android:name="android.permission.INTERNET"/>
	<!-- GPSの利用権限 -->
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<!-- エミュレータにてGPSを利用する場合の権限 -->
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>
	<!-- バッテリー -->
	 <uses-permission android:name="android.permission.BATTERY_STATS"/>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".GitHubTestActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <intent-filter>
					<action android:name="android.intent.action.BATTERY_CHANGED" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="gingbear" android:host="com.gingbear.githubtest" />
            </intent-filter>
        </activity>
        
        
        <receiver
            android:exported="true"
            android:name=".receiver.CustomReceiver" >
            <intent-filter >
                <action android:name="com.android.vending.INSTALL_REFERRER" />
                <!-- Wifi の ON/OFF の検知と変更 -->
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
                <!-- ネットワーク接続状態の検知 -->
                <action android:name="android.net.wifi.STATE_CHANGE" />
				<!-- 外部電源 -->
				<action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
				<action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
				<action android:name="android.intent.action.BATTERY_CHANGED" />
            </intent-filter>
        </receiver>
        
    <service android:name="com.gingbear.githubtest.ServiceTest">
            <intent-filter>
                <action android:name="BUTTON_CLICK_ACTION" />
            </intent-filter>
    </service>
        
    </application>
</manifest>
